@model Account

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center my-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white text-center">
                <h3>تسجيل حساب جديد</h3>
            </div>
            <div class="card-body p-4">
                
                <form asp-action="Register" method="post">
                    <span asp-validation-summary="All" class="text-danger"></span>
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="control-label fw-bold text-end d-block">اسم المستخدم</label>
                        <input asp-for="UserName" class="form-control text-end" placeholder="أدخل اسم المستخدم" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold text-end d-block">الاسم الكامل</label>
                        <input asp-for="Name" class="form-control text-end" placeholder="أدخل اسمك الكامل" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label fw-bold text-end d-block">البريد الإلكتروني</label>
                        <input asp-for="Email" class="form-control text-end" placeholder="أدخل بريدك الإلكتروني" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DateOfBirth" class="control-label fw-bold text-end d-block">تاريخ الميلاد</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control text-end" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label fw-bold text-end d-block">كلمة المرور</label>
                        <input asp-for="Password" type="password" class="form-control text-end" placeholder="أدخل كلمة المرور" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="control-label fw-bold text-end d-block">تأكيد كلمة المرور</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control text-end" placeholder="أعد كتابة كلمة المرور" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">تسجيل</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <p>هل لديك حساب؟ <a asp-action="Login" class="text-success fw-bold">تسجيل الدخول</a></p>
        </div>
    </div>
</div>
